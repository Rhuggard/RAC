<%= form_tag "/login" do %>
<div class="field">
<%= label_tag :name %><br />
<%= text_field_tag :name, params[:name] %>
</div>
<div class="field">
<%= label_tag :password %><br />
<%= password_field_tag :password, params[:password] %>
</div>
<div class = "actions">
<%= submit_tag "Login" %>
</div>
<% end %>
